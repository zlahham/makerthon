<div class="container col-lg-4 col-lg-offset-4 ">
  <% if current_user %>
    <% if @polls.any? %>
        <% @polls.each do |poll| %>
          <div class="text-center">
            <h1><%= link_to  poll.name, poll_path(poll) %></h1>
            <% if current_user.id == poll.user_id%>
              <h2><%= link_to "delete", poll_path(poll), method: :delete %></h2>
            <% end %>
            <h2>Your vote status: <%= @user_vote %></h2>
          <div class="row" id="voting-buttons">
            <% if @user_vote < 1 && @user_vote > -2 %>
              <%= button_to("Upvote", upvote_poll_path(poll), class: "btn btn-success btn-lg", method: :put) %>
            <% end %>
            <% if @user_vote > -1 && @user_vote < 2 %>
              <%= button_to("Downvote", downvote_poll_path(poll), class: "btn btn-danger btn-lg", method: :put) %>
            <% end %>
          </div>
        <% end %>
    <% else %>
      <h2>No polls yet</h2>
      <%= link_to "Add a poll", new_poll_path %>
    <% end %>
          </div>
  <% else  %>
    <div class="row">
      <div class="welcome col-lg-4 col-lg-offset-4">
        <%= image_tag "logo.png", class: "logo_image" %>
      </div>
    </div>
  <% end  %>

</div>
